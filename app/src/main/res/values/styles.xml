<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonFBLoginVisuals">
        <item name="android:background">@drawable/login_fb_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:drawableStart">@drawable/ic_facebook_logo</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="buttonLoginVisuals">
        <item name="android:background">@drawable/login_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="buttonGoogleLoginVisuals">
        <item name="android:background">@drawable/login_google_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:drawableStart">@drawable/ic_google_logo</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
